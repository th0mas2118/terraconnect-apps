# Node Environment
NODE_ENV=development
PORT=3000

# MQTT Configuration
MQTT_BROKER=mqtt://mqtt-broker-local:1883
MQTT_TOPIC=homelab/esp32/#

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb-local:8086
INFLUXDB_TOKEN=your-secret-token-here
INFLUXDB_ORG=homelab
INFLUXDB_BUCKET=iot_data

# InfluxDB Init (for container setup)
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=change-me-in-production
DOCKER_INFLUXDB_INIT_ORG=homelab
DOCKER_INFLUXDB_INIT_BUCKET=iot_data
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=change-me-in-production
